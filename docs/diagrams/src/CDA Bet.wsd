    Competition -- Competition
    Competition -- Sport
    Competition -- SportType
    Order -- Payment
    Event -- Odds
    Event -- Sport
    Event -- SportType
    Event -- Competitor
    Event -- Team
    Event -- Country
    Event -- TimeZone
    User -- Order
    Order -- Bet
}
