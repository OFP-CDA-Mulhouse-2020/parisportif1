{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!
{% endblock %}

{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello {{ controller_name }}! âœ…</h1>

		{% for dbEvent in dbEvent %}

			<div class="card" style="width: 18rem;">
				<img class="card-img-top" src="..." alt="Card image cap">
				<div class="card-body">
					<h5 class="card-title">{{dbEvent.name}}</p>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item">Lieu: {{dbEvent.location}}</li>
					<li class="list-group-item">Date: {{dbEvent.eventDate|date('d-m-Y')}}</li>
					{{dump(dbEvent.odds)}}
					{% for gOdds in dbEvent.odds  %}
						{{dump(gOdds.value)}}
					{% endfor %}
					<li class="list-group-item"></li>
				</ul>
				<div class="card-body">
					<a href="#" class="card-link">view</a>
				</div>
			</div>

		{% endfor %}
	</div>
{% endblock %}
